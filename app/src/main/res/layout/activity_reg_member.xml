<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegMember"
    android:orientation="vertical"
    android:weightSum="100"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="회원가입"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="200"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:text="*표시는 필수 작성 사항입니다"
                android:textSize="13dp"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="*아이디"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:textSize="18dp"
                android:id="@+id/textRegId"
                android:maxLength="10"
                ></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="*비밀번호 (영어/숫자 혼합 8자 이상)"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:textSize="18dp"
                android:password="true"
                android:id="@+id/textRegPw"
                android:maxLength="20"
                ></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="*비밀번호 확인"
                android:maxLength="20"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:textSize="18dp"
                android:password="true"
                android:id="@+id/textRegPc"
                android:maxLength="20"
                ></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="닉네임"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:textSize="18dp"
                android:id="@+id/textRegname"
                ></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="*이메일"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:textSize="18dp"
                android:id="@+id/textRegemail"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:text="회원가입"
                android:textSize="18dp"
                android:id="@+id/Regreg"
                android:onClick="builStart"
                ></Button>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>